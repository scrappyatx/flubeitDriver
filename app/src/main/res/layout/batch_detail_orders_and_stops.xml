<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:orientation="vertical"

    android:layout_width="0dp"
    android:layout_height="wrap_content"

    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"

    android:elevation="8dp"
    tools:targetApi="lollipop">

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/vGuideline25"
        app:layout_constraintGuide_percent="0.25"
        android:orientation="vertical" />

    <ImageView
        android:id="@+id/batch_detail_order_count_icon"
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:adjustViewBounds="true"
        android:cropToPadding="true"
        android:scaleType="fitCenter"
        tools:src="@drawable/one_circle_c1600"
        tools:ignore="ContentDescription"

        app:layout_constraintTop_toTopOf="@+id/batch_detail_order_view_button"
        app:layout_constraintBottom_toBottomOf="@+id/batch_detail_order_view_button"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/vGuideline25"

        android:layout_marginBottom="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="4dp"
        />

    <TextView
        android:id="@+id/batch_detail_order_count_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        tools:text="Service Order"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textStyle="normal"

        app:layout_constraintTop_toTopOf="@+id/batch_detail_order_view_button"
        app:layout_constraintBottom_toBottomOf="@+id/batch_detail_order_view_button"
        app:layout_constraintLeft_toRightOf="@+id/vGuideline25"

        android:layout_marginTop="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp" />

    <Button
        android:id="@+id/batch_detail_order_view_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        tools:text="View"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:textStyle="normal"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        android:layout_marginBottom="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="4dp" />

    <ImageView
        android:id="@+id/batch_detail_stop_count_icon"
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:adjustViewBounds="true"
        android:cropToPadding="true"
        android:scaleType="fitCenter"
        tools:src="@drawable/three_circle_c1600"
        tools:ignore="ContentDescription"

        app:layout_constraintTop_toTopOf="@+id/batch_detail_stop_view_button"
        app:layout_constraintBottom_toBottomOf="@+id/batch_detail_stop_view_button"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/vGuideline25"

        android:layout_marginBottom="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="4dp"
        />

    <TextView
        android:id="@+id/batch_detail_stop_count_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        tools:text="Destination"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textStyle="normal"

        app:layout_constraintTop_toTopOf="@+id/batch_detail_stop_view_button"
        app:layout_constraintBottom_toBottomOf="@+id/batch_detail_stop_view_button"
        app:layout_constraintLeft_toRightOf="@+id/vGuideline25"


        android:layout_marginTop="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp" />

    <Button
        android:id="@+id/batch_detail_stop_view_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        tools:text="View"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:textStyle="normal"

        app:layout_constraintTop_toBottomOf="@+id/batch_detail_order_view_button"
        app:layout_constraintRight_toRightOf="parent"

        android:layout_marginBottom="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="4dp" />



</android.support.constraint.ConstraintLayout>