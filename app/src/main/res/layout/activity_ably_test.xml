<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/toolbar"/>

    <Button
        android:id="@+id/ably_connect_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:onClick="clickAblyConnect"
        android:text="Connect"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="386dp"
        android:layout_height="44dp"
        android:layout_marginTop="16dp"
        android:text="Ably Messaging Testing"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/connection_result_text"
        android:layout_width="360dp"
        android:layout_height="52dp"
        android:layout_marginLeft="8dp"
        android:text="Channel Result"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/ably_disconnect_button"
        app:layout_constraintHorizontal_bias="0.0"
        tools:layout_editor_absoluteX="16dp" />

    <Spinner
        android:id="@+id/ably_driver_msg_spinner"
        android:layout_width="250dp"
        android:layout_height="54dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/connection_result_text" />

    <Spinner
        android:id="@+id/ably_batch_msg_spinner"
        android:layout_width="250dp"
        android:layout_height="55dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ably_driver_msg_spinner" />

    <Button
        android:id="@+id/ably_driver_msg_send_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:onClick="clickAblyDriverSend"
        android:text="SEND"
        app:layout_constraintLeft_toRightOf="@+id/ably_driver_msg_spinner"
        app:layout_constraintTop_toBottomOf="@+id/connection_result_text" />

    <Button
        android:id="@+id/ably_batch_msg_send_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:onClick="clickAblyBatchSend"
        android:text="SEND"
        app:layout_constraintLeft_toRightOf="@+id/ably_batch_msg_spinner"
        app:layout_constraintTop_toBottomOf="@+id/ably_driver_msg_send_button" />

    <TextView
        android:id="@+id/message_result_text"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="Message Result"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ably_batch_msg_spinner"
        tools:layout_editor_absoluteY="310dp" />

    <Button
        android:id="@+id/goto_prestartup_activity_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="31dp"
        android:onClick="clickGoToPreStartupActivity"
        android:text="Back to PreStartup"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/ably_disconnect_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:onClick="clickAblyDisconnect"
        android:text="Disconnect"
        app:layout_constraintLeft_toRightOf="@+id/ably_connect_button"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

</android.support.constraint.ConstraintLayout>