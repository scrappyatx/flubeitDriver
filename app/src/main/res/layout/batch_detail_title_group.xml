<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:orientation="vertical"

    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/vGuideline25"
        app:layout_constraintGuide_percent="0.25"
        android:orientation="vertical" />

    <ImageView
        android:id="@+id/batch_detail_title_icon"
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:adjustViewBounds="true"
        android:cropToPadding="true"
        android:scaleType="fitCenter"
        tools:src="@mipmap/jiffylube"
        tools:ignore="ContentDescription"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/vGuideline25"

        android:layout_marginBottom="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="2dp" />

    <TextView
        android:id="@+id/batch_detail_batch_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        tools:text="Production Test"
        android:textAppearance="@style/BatchDetailStyleBatchType"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/batch_detail_title"
        app:layout_constraintLeft_toRightOf="@+id/vGuideline25"

        android:layout_marginTop="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp" />

    <TextView
        android:id="@+id/batch_detail_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        tools:text="Oil Change"
        android:textAppearance="@style/BatchDetailStyleTitle"

        app:layout_constraintTop_toBottomOf="@+id/batch_detail_batch_type"
        app:layout_constraintBottom_toTopOf="@+id/batch_detail_description"
        app:layout_constraintLeft_toRightOf="@+id/vGuideline25"


        android:layout_marginTop="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp" />

    <TextView
        android:id="@+id/batch_detail_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        tools:text="description text"
        android:textAppearance="@style/BatchDetailStyleDescription"

        app:layout_constraintTop_toBottomOf="@+id/batch_detail_title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/vGuideline25"


        android:layout_marginTop="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"/>

</android.support.constraint.ConstraintLayout>