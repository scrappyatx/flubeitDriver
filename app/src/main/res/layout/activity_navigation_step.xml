<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:mapbox="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/toolbar"
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <include layout="@layout/guidelines" />

    <include layout="@layout/navigation_detail_step_title"
        android:id="@+id/step_title_block"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintBottom_toTopOf="@+id/due_by_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/due_by_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        tools:text="Due by: Sat Oct 14 06:25:07 CDT 2017"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textStyle="normal"

        app:layout_constraintTop_toBottomOf="@+id/step_title_block"
        app:layout_constraintBottom_toTopOf="@+id/mapView"
        app:layout_constraintLeft_toLeftOf="@+id/vGuideline10"
        app:layout_constraintRight_toRightOf="parent"

        android:layout_marginTop="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp" />

    <com.mapbox.mapboxsdk.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="0dp"
        android:layout_height="0dp"

        app:layout_constraintTop_toBottomOf="@+id/due_by_text"
        app:layout_constraintBottom_toTopOf="@+id/step_address_block"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"


        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        mapbox:mapbox_cameraTargetLat="30.545767"
        mapbox:mapbox_cameraTargetLng="-97.757811"
        mapbox:mapbox_styleUrl="mapbox://styles/mapbox/traffic-day-v2"
        mapbox:mapbox_cameraZoom="13"
        mapbox:mapbox_cameraBearing="34.33"
        mapbox:mapbox_cameraTilt="50.25"
        mapbox:mapbox_cameraZoomMax="16"
        mapbox:mapbox_cameraZoomMin="6"
        mapbox:mapbox_uiRotateGestures="false"/>

    <include layout="@layout/navigation_detail_address"
        android:id="@+id/step_address_block"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toBottomOf="@+id/mapView"
        app:layout_constraintBottom_toTopOf="@+id/calculate_route_button"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/calculate_route_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:layout_marginBottom="4dp"

        android:onClick="clickCalculateRouteButton"
        android:text="@string/navigation_step_calculate_route_button_caption"

        app:layout_constraintBottom_toTopOf="@+id/start_navigation_button"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/start_navigation_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:layout_marginBottom="4dp"

        android:onClick="clickStartNavigationButton"
        android:text="@string/navigation_step_start_navigation_button_caption"

        app:layout_constraintBottom_toTopOf="@+id/user_has_arrived_button"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/user_has_arrived_button"

        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:layout_marginBottom="4dp"

        android:onClick="clickUserHasArrivedButton"
        android:text="@string/navigation_step_user_has_arrived_button_caption"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />



</android.support.constraint.ConstraintLayout>