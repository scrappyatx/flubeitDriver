<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:orientation="vertical"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"

    android:elevation="8dp"
    tools:targetApi="lollipop">

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/vGuideline10"
        app:layout_constraintGuide_percent="0.10"
        android:orientation="vertical" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/vGuideline80"
        app:layout_constraintGuide_percent="0.80"
        android:orientation="vertical" />


    <TextView
        android:id="@+id/service_order_list_sequence"
        android:layout_width="30dp"
        android:layout_height="30dp"

        tools:text="1"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textStyle="normal"
        android:background="@drawable/order_circle_not_active"
        android:textAlignment="center"
        android:gravity="center"
        android:textColor="@color/colorTextPrimaryLight"


        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@+id/vGuideline10"


        android:layout_marginTop="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp" />

    <TextView
        android:id="@+id/service_order_list_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        tools:text="This is the service order title"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textStyle="normal"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/service_order_list_description"
        app:layout_constraintLeft_toRightOf="@+id/vGuideline10"


        android:layout_marginTop="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp" />

    <TextView
        android:id="@+id/service_order_list_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        tools:text="This is the service order description"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:textStyle="normal"
        android:fontFamily="sans-serif-condensed"

        app:layout_constraintTop_toBottomOf="@+id/service_order_list_title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/vGuideline10"


        android:layout_marginTop="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp" />

    <TextView
        android:id="@+id/service_order_list_start_by_caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        tools:text="Start by:"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textStyle="normal"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/service_order_list_complete_by_caption"
        app:layout_constraintRight_toLeftOf="@+id/vGuideline80"


        android:layout_marginTop="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp" />

    <TextView
        android:id="@+id/service_order_list_complete_by_caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        tools:text="Complete by:"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textStyle="normal"

        app:layout_constraintTop_toBottomOf="@+id/service_order_list_start_by_caption"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/vGuideline80"


        android:layout_marginTop="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp" />

    <TextView
        android:id="@+id/service_order_list_start_by_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        tools:text="2:30 pm"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textStyle="normal"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/service_order_list_complete_by_value"
        app:layout_constraintLeft_toRightOf="@+id/vGuideline80"


        android:layout_marginTop="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp" />

    <TextView
        android:id="@+id/service_order_list_complete_by_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        tools:text="4:30 pm"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textStyle="normal"

        app:layout_constraintTop_toBottomOf="@+id/service_order_list_start_by_value"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/vGuideline80"


        android:layout_marginTop="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp" />




</android.support.constraint.ConstraintLayout>