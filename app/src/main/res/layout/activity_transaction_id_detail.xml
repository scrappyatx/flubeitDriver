<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/toolbar"
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>


    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hguideline10"
        app:layout_constraintGuide_percent="0.1"
        android:orientation="horizontal" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hguideline60"
        app:layout_constraintGuide_percent="0.4"
        android:orientation="horizontal" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/vguideline80"
        app:layout_constraintGuide_percent="0.80"
        android:orientation="vertical" />

    <TextView
        android:id="@+id/transaction_id_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:text="@string/transaction_id_detail_ocr_title"
        android:textAppearance="@style/TransactionIdDetailTitleStyle"

        app:layout_constraintTop_toTopOf="@+id/hguideline60"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"

        android:layout_marginTop="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"/>

    <Button
        android:id="@+id/use_device_ocr_detected_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:layout_marginTop="12dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="12dp"

        android:background="@drawable/step_detail_swipe_complete_button_state"
        android:textColor="@color/colorButtonText"

        tools:text="Detected : 100XXX333229"

        app:layout_constraintTop_toBottomOf="@+id/transaction_id_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/use_cloud_ocr_detected_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:layout_marginTop="12dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="12dp"

        android:background="@drawable/step_detail_swipe_complete_button_state"
        android:textColor="@color/colorButtonText"

        tools:text="Detected : 100XXX333229"

        app:layout_constraintTop_toBottomOf="@+id/use_device_ocr_detected_button"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/manual_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:text="@string/transaction_id_detail_manual_title"
        android:textAppearance="@style/TransactionIdDetailTitleStyle"

        app:layout_constraintTop_toBottomOf="@+id/hguideline10"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"

        android:layout_marginTop="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"/>


    <EditText
        android:id="@+id/manual_entry_text"
        android:inputType="text"

        android:importantForAutofill="no"
        tools:ignore="Autofill"

        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:layout_marginTop="24dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"

        app:layout_constraintTop_toBottomOf="@+id/manual_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/vguideline80" />

    <Button
        android:id="@+id/manual_entry_complete_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:layout_marginTop="4dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="4dp"

        android:background="@drawable/step_detail_swipe_complete_button_state"
        android:textColor="@color/colorButtonText"

        android:text="@string/transaction_id_detail_manual_entry_finished_button_caption"

        app:layout_constraintBottom_toBottomOf="@+id/manual_entry_text"
        app:layout_constraintLeft_toRightOf="@+id/vguideline80"
        app:layout_constraintRight_toRightOf="parent" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/transaction_id_detail_waiting_animation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="32dp"
        android:adjustViewBounds="true"
        android:scaleType="fitEnd"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        app:lottie_autoPlay="true"
        app:lottie_fileName="material_wave_loading.json"
        app:lottie_loop="true"
        android:layout_marginBottom="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp" />


</android.support.constraint.ConstraintLayout>