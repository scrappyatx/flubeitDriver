<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/notification"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/notification_text_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ScrubApp7 ON DUTY"
        android:textStyle="bold"
        android:ellipsize="end"
        android:lines="1" />

    <TextView
        android:id="@+id/notification_text_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below = "@id/notification_text_title"
        android:text="Sending location updates while you are on duty"
        android:textStyle="normal"
        android:ellipsize="end"
        android:lines="3" />

</RelativeLayout>